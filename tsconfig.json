{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "lib":["es2017"],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf8",
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "outDir": "./dist",
   "allowSyntheticDefaultImports": true
    // "esModuleInterop": true
  },
  "include": ["lib", "typings"],
  "exclude": [
    "node_modules*"
  ],
  "typeRoots": [
    "typings",
    "node_modules/@types"
  ],
}
